@using TripAndTravel.Models
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Baslik</td>
            <td><a href="/Admin/DeleteBlog/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/GetBlog/@item.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-warning">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Admin/AddBlog/" class="btn btn-primary">Yeni Blog</a>

