@using TripAndTravel.Models
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE HTML>
<html>
<head>

    <link href="~/webblog/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/webblog/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />

    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>


</head>
<body>
    <!---header---->
    <div class="header">
        <div class="container">
            <div class="clearfix"></div>
        </div>
    </div>
    <!--/header-->
    <div>
        <div class="single">
            <div class="container">
                <div class="col-md-8 single-main">
                    @foreach (var x in Model)
                    {
                        <div class="single-grid">

                            <h3><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></h3>
                            <img src="@x.BlogResim" alt="" style="margin-top:20px" />
                            <p>
                                @x.Aciklama.Substring(0, 250)
                                <a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku...</span></a>
                            </p>
                           
                        </div>
                        <br /><br />
                    }
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</body>
</html>









